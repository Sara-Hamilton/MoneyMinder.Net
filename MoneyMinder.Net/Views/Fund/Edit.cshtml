@model MoneyMinder.Net.Models.Fund

@{
    ViewData["Title"] = "Fund - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit">
    <div class="form-horizontal">
        <h2>Edit</h2>
        <hr />

        <div asp-validation-summary="ModelOnly"></div>

        @Html.HiddenFor(model => model.FundId)

        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
            <span class="col-md-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="Minimum" class="col-md-2 control-label"></label>
            <input asp-for="Minimum" class="form-control" />
            <span asp-validation-for="Minimum"></span>
            <span class="col-md-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="Goal" class="col-md-2 control-label"></label>
            <input asp-for="Goal" class="form-control" />
            <span asp-validation-for="Goal"></span>
            <span class="col-md-2"></span>
        </div>

        <input class="btn btn-default" type="submit" value="Save" />

    </div>
</form>