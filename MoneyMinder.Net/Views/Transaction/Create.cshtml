@using MoneyMinder.Net.Models
@model MoneyMinder.Net.Models.Transaction


@{
    ViewData["Title"] = "Transaction - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new Transaction</h2>
<hr />

<form asp-action="Create">
    <div class="form-horizontal">
        <h3>Add a new Transaction</h3>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="Date" class="col-md-2 control-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>

            <label asp-for="Type" class="col-md-2 control-label"></label>
            <select asp-for="Type" class="form-control">
                <option>Deposit</option>
                <option>Withdrawal</option>
            </select>

            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>

            <label asp-for="Description" class="col-md-2 control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>

            <label asp-for="FundId" class="col-md-2 control-label"></label>
            @Html.DropDownListFor(model => model.FundId, ViewBag.FundId as IEnumerable<SelectListItem>, new { @class = "form-control" })

            <label asp-for="CategoryId" class="col-md-2 control-label"></label>
            @Html.DropDownListFor(model => model.CategoryId, ViewBag.CategoryId as IEnumerable<SelectListItem>, new { @class = "form-control" })

        </div>
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
