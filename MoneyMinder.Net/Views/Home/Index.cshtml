@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/sharon-mccutcheon-552616-unsplash.jpg" alt="woman holding money" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-box">
                    It's Your Money
                </p>
            </div>
            <p class="right-align">
                photo by Sharon McCutcheon
            </p>
        </div>
        <div class="item">
            <img src="~/images/sharon-mccutcheon-556371-unsplash.jpg" alt="woman holding money" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-box">
                    Keep Track of Your Spending
                </p>
            </div>
            <p class="right-align">
                photo by Sharon McCutcheon
            </p>
        </div>
        <div class="item">
            <img src="~/images/sharon-mccutcheon-665638-unsplash.jpg" alt="woman holding money" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-box">
                    Know Where Your Dollars are Going
                </p>
            </div>
            <p class="right-align">
                photo by Sharon McCutcheon
            </p>
        </div>
        <div class="item">
            <img src="~/images/sharon-mccutcheon-746352-unsplash.jpg" alt="woman holding money" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-box">
                    Save Money to Reach Your Goals
                </p>
            </div>
            <p class="right-align">
                photo by Sharon McCutcheon
            </p>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Customize Your Spending</h2>
        <ul>
            <li><a href="Fund/Create">You can create your own Funds</a></li>
            <li><a href="Category">Customize your categories or use the standard defaults</a></li>
            <li>Edit Your Funds and Categories to reflect your spending needs and desires</li>
            <li><a href="Transaction">Make Transactions tied to a specific Fund and Category</a></li>
            <li><a href="Transaction/Transfer">Transfer money from one Fund to another</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Save For Specific Purposes</h2>
        <ul>
            <li><a href="Fund/Create">Create Funds for specific Goals</a></li>
            <li><a href="Fund">Set Goal Amounts for Funds with the Edit feature</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Track Your Spending</h2>
        <ul>
            <li><a href="/Fund/Create">Create Funds to control spending</a></li>
            <li><a href="/Transaction/Filter">Filter transactions by date range</a></li>
            <li><a href="/Transaction/Filter">Filter transactions by Funds and/or Categories</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Examples</h2>
        <ul class="gray">
            <li>Create a Vacation Fund with a goal amount and transfer money to it once a month.</li>
            <li>Create a Coffee Fund to limit the amount of money spent on coffee each month.</li>
            <li>Use the Groceries and Eating Out categories to track how much money is being spent on food each week.</li>
        </ul>
    </div>
</div>
