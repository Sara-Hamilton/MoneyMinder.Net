@model IEnumerable<MoneyMinder.Net.Models.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@User.Identity.Name's Categories</h2>

<p>@Html.ActionLink("Create New Category", "Create", "Category")</p>

@if (Model.Any())
{
    @foreach (var listCategory in Model)
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-4">@Html.DisplayFor(modelCategory => listCategory.Name)</div>
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    @Html.ActionLink("Edit", "Edit", new { id = listCategory.CategoryId })
                    @if (!(ViewBag.UserTransactionIds.Contains(listCategory.CategoryId)))
                    {
                        <span> | </span> @Html.ActionLink("Delete", "Delete", new { id = listCategory.CategoryId })
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    <p>No categories have been added yet!</p>
}